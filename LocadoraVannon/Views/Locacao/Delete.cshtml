@model LocadoraVannon.Models.Locacao

@{
    ViewData["Title"] = "Excluir";
}

<h1>Excluir</h1>
<h3>Tem certeza que deseja excluir este registro?</h3>

<div>
    <h4>Locação</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Filme)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Filme.Titulo)
        </dd>
        <dt class="col-sm-2">
            Data de Locação
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataLocacao)
        </dd>
        <dt class="col-sm-2">
            Data de Devolução
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataDevolucao)
        </dd>
        <dt class="col-sm-2">
            Valor Pago
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ValorPago)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar para a lista</a>
    </form>
</div>
